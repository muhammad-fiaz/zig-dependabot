{
  "name": "zig-dependabot",
  "version": "1.0.0",
  "description": "Automated dependency updates for Zig projects (build.zig.zon)",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "test": "vitest",
    "build": "bun build ./src/index.ts --outdir ./dist --target node",
    "lint": "biome check .",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,ts,json,md}": [
      "biome check --write --no-errors-on-unmatched",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@types/bun": "latest",
    "@types/node": "^25.0.9",
    "@types/semver": "^7.7.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "3.8.0",
    "vitest": "^4.0.17"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@actions/core": "^2.0.2",
    "@actions/exec": "^2.0.0",
    "@actions/github": "^7.0.0",
    "semver": "^7.7.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/muhammad-fiaz/zig-dependabot.git"
  },
  "author": "Muhammad Fiaz",
  "license": "MIT"
}
